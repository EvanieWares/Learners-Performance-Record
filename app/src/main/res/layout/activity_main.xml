<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:id="@+id/tvEnrollment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Enrollment:"
                    android:textSize="20sp" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <TableRow android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boys:  "
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/allBoys"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Girls:  "
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/allGirls"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total:  "
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/learnersAdded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvBestLearners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Performing Learners"
                android:textColor="@color/black"
                android:backgroundTint="@color/blue"
                android:background="@drawable/border2"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp">

                <TableRow android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/llOverall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>